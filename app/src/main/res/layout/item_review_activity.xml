<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/review_act_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_review_profile_img"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/img_profile" />

            <TextView
                android:id="@+id/item_review_user_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@+id/item_review_profile_img"
                android:text="김지혜" />


            <ImageView
                android:id="@+id/item_review_star1_img"
                android:layout_width="11dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/item_review_user_id_tv"
                android:src="@drawable/icon_star" />

            <ImageView
                android:id="@+id/item_review_star2_img"
                android:layout_width="11dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="1.4dp"
                android:layout_toRightOf="@+id/item_review_star1_img"
                android:src="@drawable/icon_star" />

            <ImageView
                android:id="@+id/item_review_star3_img"
                android:layout_width="11dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="1.4dp"
                android:layout_toRightOf="@+id/item_review_star2_img"
                android:src="@drawable/icon_star" />

            <ImageView
                android:id="@+id/item_review_star4_img"
                android:layout_width="11dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="1.4dp"
                android:layout_toRightOf="@+id/item_review_star3_img"
                android:src="@drawable/icon_star" />

            <ImageView
                android:id="@+id/item_review_star5_img"
                android:layout_width="11dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="1.4dp"
                android:layout_toRightOf="@+id/item_review_star4_img"
                android:src="@drawable/icon_star" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="169dp"
                android:layout_toRightOf="@+id/item_review_star5_img"
                android:src="@drawable/btn_more" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/review_act_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_review_tv"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="22dp"
                android:text="시적 순간의 생명력으로 재창조했다. 그만의 고유한 방식으로 촬영된 ‘필름다이어리’ 작품들은 지나간 시간들에 살아 움직이는 이미지의 숨결을 불어넣는다. 덧없이 찰나..."
                android:textColor="#484848"
                android:textSize="14sp" />


        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/item_review_picture_img"
        android:layout_width="275dp"
        android:layout_height="140dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:src="@drawable/btn_camera"/>

    <TextView
        android:id="@+id/item_review_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="end"
        android:layout_marginEnd="45dp"
        android:text="2017.12.29"
        android:textColor="#7a7a7a"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#a0a0a0"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        />

</LinearLayout>