<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:background="@drawable/bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="마이페이지"
                android:textColor="#ffffff"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:src="@drawable/btn_setting" />

        </RelativeLayout>

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mypage_profile_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:src="@drawable/img_profile" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mypage_profile_photo_btn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignBottom="@+id/mypage_profile_img"
        android:layout_alignRight="@+id/mypage_profile_img"
        android:layout_marginLeft="198dp"
        android:layout_marginTop="113dp"
        android:src="@drawable/btn_image_edit" />

    <TextView
        android:id="@+id/fragment_mypage_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="146dp"
        android:gravity="center_horizontal"
        android:text="김지혜"
        android:textColor="#484848"
        android:textSize="17sp" />

    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignBottom="@+id/fragment_mypage_name_tv"
        android:layout_toRightOf="@+id/fragment_mypage_name_tv"
        android:src="@drawable/icon_edit" />

    <LinearLayout
        android:id="@+id/frag_mypage_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/fragment_mypage_name_tv"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/mypage_steamlist_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="5sp"
                android:layout_centerHorizontal="true"
                android:text="찜 목록"
                android:textColor="#484848"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:text="12"
                android:textColor="#484848"
                android:textSize="20sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/mypage_myreview_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="5sp"
                android:layout_centerHorizontal="true"
                android:text="내가 쓴 리뷰"
                android:textColor="#484848"
                android:textSize="13sp" />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:gravity="center_horizontal"
                android:text="7"
                android:textColor="#484848"
                android:textSize="20sp" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/fragment_mypage_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/frag_mypage_layout"
        android:layout_marginTop="10dp"
        android:background="#a7a7a7" />

    <LinearLayout
        android:id="@+id/fragmnet_mypage_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragment_mypage_view"
        android:orientation="vertical" />


</RelativeLayout>