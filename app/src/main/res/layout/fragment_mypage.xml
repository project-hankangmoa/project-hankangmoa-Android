<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:background="@drawable/bar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="142dp"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:text="마이페이지"
                />

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="18.3dp"
                android:src="@drawable/btn_setting"/>

        </LinearLayout>

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="68dp"
        android:layout_marginLeft="145dp"
        android:src="@drawable/img_profile"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="113dp"
        android:layout_marginLeft="198dp"
        android:src="@drawable/btn_image_edit"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="146dp"
        android:layout_marginLeft="159dp"
        android:textSize="17sp"
        android:textColor="#484848"
        android:gravity="center_horizontal"
        android:text="김지혜"
        />

    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginLeft="203dp"
        android:layout_marginTop="149.5dp"
        android:src="@drawable/icon_edit"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="189dp"
        android:layout_marginLeft="66dp"
        android:textSize="13sp"
        android:textColor="#484848"
        android:letterSpacing="-0.05"
        android:lineSpacingExtra="5sp"
        android:gravity="center_horizontal"
        android:text="찜 목록"
        />

    <TextView
        android:id="@+id/mypage_steamlist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="207dp"
        android:layout_marginLeft="73dp"
        android:textSize="20sp"
        android:textColor="#484848"
        android:gravity="center_horizontal"
        android:text="12"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="189dp"
        android:layout_marginLeft="242dp"
        android:textSize="13sp"
        android:textColor="#484848"
        android:letterSpacing="-0.05"
        android:lineSpacingExtra="5sp"
        android:gravity="center_horizontal"
        android:text="내가 쓴 리뷰"
        />


    <TextView
        android:id="@+id/mypage_myreview_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="207dp"
        android:layout_marginLeft="266dp"
        android:textSize="20sp"
        android:textColor="#484848"
        android:gravity="center_horizontal"
        android:text="7"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="243.5dp"
        android:background="#a7a7a7"
        />

    <View
        android:layout_width="63dp"
        android:layout_height="4dp"
        android:background="#7287a7"
        android:layout_marginStart="52.5dp"
        android:layout_marginTop="242dp"
        />

    <View
        android:layout_width="63dp"
        android:layout_height="4dp"
        android:background="#7287a7"
        android:layout_marginStart="240dp"
        android:layout_marginTop="242dp"
        />

    <LinearLayout
        android:id="@+id/fragmnet_mypage_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mypage_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="266dp"
        android:layout_marginLeft="19dp"
        >

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>