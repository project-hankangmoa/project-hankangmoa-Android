<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="8dp"
    android:background="@drawable/mypage_list_round">

    <ImageView
        android:id="@+id/festival_img"
        android:layout_width="85.1dp"
        android:layout_height="85.1dp"
        android:src="@drawable/ic_launcher_background"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/festival_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="13.9dp"
        android:textSize="15sp"
        android:textColor="#0f0f0f"
        android:lineSpacingExtra="5sp"
        android:text="한강 불꽃 축제"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#484848"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="13.9dp"
        android:lineSpacingExtra="5sp"
        android:gravity="center_horizontal"
        android:text="2018. 08. 10 ~ 2018. 08. 12"
        />

    <TextView
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#484848"
        android:layout_marginTop="0.4dp"
        android:layout_marginLeft="13.9dp"
        android:lineSpacingExtra="5sp"
        android:gravity="center_horizontal"
        android:text="잠실한강공원"
        />

    </LinearLayout>


</LinearLayout>