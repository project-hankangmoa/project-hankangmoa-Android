        <ImageView
            android:layout_width="21.1dp"
            android:layout_height="20dp"
            android:layout_marginTop="45dp"
            android:layout_marginStart="201.5dp"
            android:src="@drawable/icon_star_off"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="322dp"
